<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Shoton</th>
    <th>Invoicedon</th>
    <th>Delivered</th>
    <th>Paymentreceived</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.name %></td>
    <td><%= job.price %></td>
    <td><%= job.shot_date %></td>
    <td><%= job.invoiced_on %></td>
    <td><%= job.delivered %></td>
    <td><%= job.payment_received %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

